#include <stdio.h>
#include <string.h>

int main() {
    FILE *input_file = fopen("input.txt", "r");
    FILE *output_file = fopen("output.txt", "w");
    
     if (input_file == NULL || output_file == NULL) {
        printf("error\n");
        return 1;
    }
    
    char str[101]; // 100 символов + 1 для нулевого символа
    int length = 0;
    
    // Чтение строки из файла (игнорируем переносы строк в конце)
    if (fgets(str, sizeof(str), input_file) != NULL) {
        // Удаляем символы переноса строки в конце
        length = strlen(str);
        while (length > 0 && (str[length-1] == '\n' || str[length-1] == '\r')) {
            str[length-1] = '\0';
            length--;
        }
    } else {
        // Если файл пустой, создаем пустую строку
        str[0] = '\0';
        length = 0;
    }
    
    // Вывод результата в файл
    fprintf(output_file, "%s, %s, %s, %d", str, str, str, length);
    
    fclose(input_file);
    fclose(output_file);
    
    return 0;
}
